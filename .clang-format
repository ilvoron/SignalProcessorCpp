Language: Cpp
BasedOnStyle: Chromium
ColumnLimit: 80
TabWidth: 4
IndentWidth: 4
UseTab: Never
AlignConsecutiveDeclarations: true
AlignConsecutiveAssignments: true
AlignTrailingComments:
  Kind: Always
  OverEmptyLines: 0
BraceWrapping:
  AfterClass: true
  AfterControlStatement: true
  AfterEnum: true
  AfterFunction: true
  AfterNamespace: true
  AfterStruct: true
  AfterUnion: true
  BeforeCatch: true
  BeforeElse: true
  SplitEmptyFunction: false
  SplitEmptyRecord: false
  SplitEmptyNamespace: false
NamespaceIndentation: All